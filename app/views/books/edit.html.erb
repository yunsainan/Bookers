<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div>
   <h4>Title</h4>
   <%= f.text_field :title %>
  </div>
  
  <div>
   <h4>Body</h4>
   <%= f.text_area :body %>
  </div>
  
  <div><%= f.submit 'Update Book' %></div>
  <%= link_to"Show","/books/#{@book}" %><!--詳細-->
  <%= link_to"Back","/books/" %>
  
<% end %>